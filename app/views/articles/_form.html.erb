<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <%= form.hidden_field :total_comments, value: 0 if article.new_record? %>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :tags, style: "display: block" %>
    <%= form.text_area :tags, multiple: true %>
  </div>
  <div>
    <%= form.label :categories, style: "display: block" %>
    <%= form.text_area :categories, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
